    "{urlPrefix}/api/loadClients": {
      "get": {
        "tags": [ "LoadClients" ],
        "summary": "Search LoadClients",
        "description": "Returns an array of `LoadClient` documents",
        "responses": {
          "200": {
            "description": "Array of `Load Client` documents or empty array if not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/LoadClient"
                  }
                },
                "example": [
                  {
                    "partitionKey": "loadClient",
                    "entityType": "loadClient",
                    "version": "5.0",
                    "id": "1",
                    "region": "california",
                    "zone": "colorado",
                    "prometheus": true,
                    "startupArgs": "files",  
                    "startTime": "2017-07-21T17:32:28Z"
                  },
                  {
                    "partitionKey": "loadClient",
