        }
      }
    },
    "{urlPrefix}/api/loadClients/{loadClientId}": {
      "get": {
        "tags": [ "LoadClient" ],
        "summary": "Get Load Client by ID",
        "description": "Get a single `LoadClient` document by Id",
        "parameters": [
          {
            "in": "path",
            "name":  "loadClientId",
            "description": "Numeric ID of load client to get",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string"
            },
            "example": "3"
          }
        ],
        "responses": {
          "200": {
            "description": "Array of `LoadClient` documents or empty array if not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/LoadClient"
                  }
                },
                "example": [
                  {
                    "partitionKey": "loadClient",
                    "entityType": "loadClient",
                    "version": "5.0",
                    "id": "3",
                    "region": "california",
                    "zone": "colorado",
                    "prometheus": true,
                    "startupArgs": "files",  
                    "startTime": "2017-07-21T17:32:28Z"
                  }
                ]
              }
            }
          }
        }
      }
    },
    "{urlPrefix}/healthz": {
      "get": {
        "tags": [ "Health Check" ],
